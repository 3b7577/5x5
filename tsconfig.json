    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "types": ["node"],
    "rootDir": ".",
