    "noEmit": false,
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022"
  },
  "include": ["api/**/*", "db/**/*", "shared/**/*"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "node_modules", "dist"]
}
